{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["es2015", "DOM", "ESNext"],
        "rootDir": ".",
        "allowJs": true,
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": false,
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "inlineSources": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    }
}
